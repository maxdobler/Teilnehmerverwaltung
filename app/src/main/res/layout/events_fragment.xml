<com.khandelwal.library.view.BorderFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    app:rightBorderColor="@color/borderColor"
    app:rightBorderWidth="1dp"
    tools:context="de.maxdobler.teilnehmerverwaltung.events.EventsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="1dp" />

        <Button
            android:id="@+id/addEventButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:drawableStart="@drawable/ic_add_accent_24dp"
            android:padding="@dimen/padding_normal"
            android:text="@string/event_add_button"
            android:textColor="@color/colorAccent" />

    </LinearLayout>

</com.khandelwal.library.view.BorderFrameLayout>

